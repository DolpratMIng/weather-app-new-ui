generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model CurrentWeather {
  id          Int      @id @default(autoincrement())
  temperature Float
  humidity    Float
  weatherCode Int
  description String
  recordedAt  DateTime @default(now())
}

model ForecastDay {
  id             Int      @id @default(autoincrement())
  date           DateTime
  maxTemperature Float
  minTemperature  Float
  weatherCode    Int
  description    String
  recordedAt     DateTime @default(now())
}

model HistoricalDay {
  id             Int      @id @default(autoincrement())
  date           DateTime
  maxTemperature Float
  minTemperature Float
  weatherCode    Int
  description    String
  precipitation  Float
  recordedAt     DateTime @default(now())
}